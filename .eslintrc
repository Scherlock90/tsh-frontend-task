{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-inner-declarations": 0,
    "prettier/prettier": 2,
    "no-unused-vars": 2,
    "no-var": 2,
    "eqeqeq": [2],
    "no-else-return": 2
  }
}
